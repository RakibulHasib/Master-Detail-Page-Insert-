<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/fontawesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.1.js"></script>
    @RenderSection("Styles", false)
    <style>
        body {
            padding-top: 80px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-expand-md navbar-dark fixed-top shadow-sm border-bottom" style="background-color:cadetblue">
        <div class="container">
            <a class="navbar-brand" href="/">
                @Html.ActionLink("Tour Management", "Index", "Home", new { }, new { @class = "navbar-brand" })
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarNav">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "text-white nav-link" })</li>
                    <li>@Html.ActionLink("Tour Type", "Index", "TourType", new { }, new { @class = "text-white nav-link" })</li>
                    <li>@Html.ActionLink("Booking Info", "Index", "Booking", new { }, new { @class = "text-white nav-link" })</li>
                    <li>@Html.ActionLink("Master Detail Page", "Index", "ClientEntries", new { }, new { @class = "text-white nav-link" })</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()

    </div>
    <footer style="background-color:cadetblue">
        <p class="text-center text-white">&copy; @DateTime.Now.Year - Rakibul Hasib Rakim</p>
    </footer>
    @RenderSection("Scripts", false)
    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>