@model evidence_work.Models.Booking
@using (Ajax.BeginForm("CreateBooking", "Booking", new { }, new AjaxOptions
{
    HttpMethod = "Post",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "alert",
    OnSuccess = "onSuccess",
    LoadingElementId = "spinner"
}, new { id = "f" }))
{
    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.SpotName, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.SpotName, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.SpotName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.Fee, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.Fee, new { @class = "form-control form-control-sm", type = "number" })
            @Html.ValidationMessageFor(x => x.Fee, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.TypeId, new { @class = "col-form-label col-2" })
        <div class="col-4">
            @Html.DropDownListFor(x => x.TypeId, new SelectList(ViewBag.TourTypes, "TypeId", "TypeName"), "Select", new { @class = "form-select select" })
            @Html.ValidationMessageFor(x => x.TypeId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.Available, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-4">
            @Html.CheckBoxFor(x => x.Available, new { @class = "form-check" })
            @Html.ValidationMessageFor(x => x.Available, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row mb-1">

        <div class="col-4 offset-2">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
}
